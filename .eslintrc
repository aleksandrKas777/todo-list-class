{
    "parser": "babel-eslint",
    "rules": {
        "semi": [2, "always"],
        "quotes": [2, "single"],
        "max-len": [
            "error",
            {
                "code": 120,
                "ignoreStrings": true,
                "ignoreComments": true,
                "ignoreTemplateLiterals": true
            }
        ]
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "env": {
        "es6": true
    }
}

